<h2>Lista de productos (Admin)</h2>

<table id="productTable" border="1">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{title}}</td>
            <td>${{price}}</td>
            <td>{{stock}}</td>
            <td><button class='deleteProduct' data-id='{{id}}'>Eliminar</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<br /> <hr /> <br />

<h2>Agregar producto</h2>

<form id="createProductForm">
    <label for="'productTitle">Nombre</label>
    <br />
    <input type="text" id="productTitle" name="title" />
    <br />
    <label for="'productPrice">Precio</label>
    <br />
    <input type="number" id="productPrice" name="price" />
    <br />
    <label for="'productDescription">Descripcion</label>
    <br />
    <input type="text" id="productDescription" name="description" />
    <br />
    <label for="'productStock">Stock</label>
    <br />
    <input type="number" id="productStock" name="stock" />
    <br />
    <br />
    <button type="submit">Agregar</button>
</form>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>